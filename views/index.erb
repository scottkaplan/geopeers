<html>

  <head>
    <title>
      Geopeers
    </title>
    <link type="text/css"
	  rel="stylesheet"
	  href="https://prod1.magtogo.com/library/jquery.mobile-1.4.2.min.css" />

    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true"></script>

    <script src="https://prod1.magtogo.com/library/jquery-1.11.1.min.js"></script>
    <script src="//code.jquery.com/ui/1.11.0/jquery-ui.js"></script>
    <script src="https://prod1.magtogo.com/library/jminit.js"></script>
    <script src="https://prod1.magtogo.com/library/jquery.mobile-1.4.2.min.js"></script>
    <script src="geo.js"></script>
    <script src="markerwithlabel.js"></script>
    <link type="text/css"
	  rel ="stylesheet"
	  href="geo.css" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jstimezonedetect/1.0.4/jstz.min.js"></script>

  </head>

  <body>
    <div data-role="page" id="index">

      <!-- the header contains the title and buttons -->
      <div data-theme="a" data-role="header">
        <div class="header_content">
          <div id="header_title" class="overlap_div">
            Geopeers
          </div>
          <div class="overlap_div">
            <div class="icon_div">
              <img src="images/pin_wings.png"
                   class="icon_img"
                   onclick="share_location_popup()">
            </div>
            <div class="icon_div" class="ui-widget">
              <img src="images/bookmark.png"
                   class="icon_img"
		   id="register_button"
		   onclick="manage_beacons()"
		   >
	    </div>
            <div style="clear:both"></div>
          </div>
        </div>
	<div id="geo_info" class="info"></div>
	<div id="geo_error" class="error"></div>
      </div>

      <%= ERB.new(File.read('views/popup_register.erb'), nil, "%").result(binding) %>
      <%= ERB.new(File.read('views/popup_share_location.erb'), nil, "%").result(binding) %>
      <%= ERB.new(File.read('views/popup_alert.erb'), nil, "%").result(binding) %>

      <!-- map -->
      <div data-role="content" id="content">
        <div id="map_canvas"
             style="height:100%">       <!-- this has to be here or JQM will override -->
        </div>
      </div>

    </div>
  </body>

</html>
