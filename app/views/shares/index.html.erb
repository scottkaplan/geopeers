<h1>Listing shares</h1>

<table>
  <thead>
    <tr>
      <th>Expire time</th>
      <th>Device</th>
      <th>Share via</th>
      <th>Share to</th>
      <th>Share cred</th>
      <th>Share to</th>
      <th>Num uses</th>
      <th>Num uses max</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @shares.each do |share| %>
      <tr>
        <td><%= share.expire_time %></td>
        <td><%= share.device_id %></td>
        <td><%= share.share_via %></td>
        <td><%= share.share_to %></td>
        <td><%= share.share_cred %></td>
        <td><%= share.share_to %></td>
        <td><%= share.num_uses %></td>
        <td><%= share.num_uses_max %></td>
        <td><%= link_to 'Show', share %></td>
        <td><%= link_to 'Edit', edit_share_path(share) %></td>
        <td><%= link_to 'Destroy', share, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

